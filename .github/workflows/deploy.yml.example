# Example deployment workflow
# Rename this file to deploy.yml and configure your deployment settings

name: Deploy

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  deploy-backend:
    name: Deploy Backend
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
      
      - name: Install dependencies
        working-directory: ./backend
        run: npm ci
      
      - name: Deploy to server
        # Add your deployment steps here
        # Examples: SSH deployment, Docker build, cloud platform deployment
        run: |
          echo "Add your deployment commands here"
          # Example: scp -r backend/* user@server:/path/to/app
          # Example: docker build -t chat-app-backend ./backend

  deploy-frontend:
    name: Deploy Frontend
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
      
      - name: Install dependencies
        working-directory: ./frontend
        run: npm ci
      
      - name: Build frontend
        working-directory: ./frontend
        run: npm run build
        env:
          REACT_APP_API_URL: ${{ secrets.REACT_APP_API_URL || 'https://api.yourdomain.com' }}
          CI: true
      
      - name: Deploy to server
        # Add your deployment steps here
        # Examples: Netlify, Vercel, AWS S3, etc.
        run: |
          echo "Add your deployment commands here"
          # Example: netlify deploy --prod --dir=frontend/build
          # Example: aws s3 sync frontend/build s3://your-bucket-name

